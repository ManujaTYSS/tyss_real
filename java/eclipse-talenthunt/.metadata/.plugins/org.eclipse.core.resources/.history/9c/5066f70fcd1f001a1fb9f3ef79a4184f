	@GetMapping(path = "/get-all-candidate", produces = MediaType.APPLICATION_JSON_VALUE)
	@ResponseBody
	public Response getAllCandidate(HttpServletRequest request) {
		Response response = new Response();

		List<CandidateCreation> candidate = service.getAllCandidate();
		if (candidate != null) {
			response.setStatusCode(200);
			response.setMessage("Success");
			response.setCandidate1(candidate);
			return response;
		} else {
			response.setStatusCode(400);
			response.setMessage("Failure");
			return response;
		}
	}

	@PostMapping(path = "/scheduleinterview", produces = MediaType.APPLICATION_JSON_VALUE)
	public Response scheduleInterviewBean(@RequestBody ScheduleInterviewBean scheduleInterview) {
           Response response = new Response();
		ScheduleInterviewBean interview = service.addInterview(scheduleInterview);
		if (scheduleInterview != null) {
			response.setStatusCode(200);
			response.setMessage("scheduled successfully");
			return response;
		} else {
			response.setStatusCode(400);
			response.setMessage("schedulimg interview is failed");
			return response;
		}
	}
}
